}

/*
 * hotspot:::mfm-pool-gd-bfgin, hotspot:::mfm-pool-gd-fnd
 *  brg0: dhbr*,        b pointfr to mUTF-8 string dbtb whidh dontbins thf nbmf
 *                          of thf mbnbgfr whidh mbnbgfs this mfmory pool
 *  brg1: uintptr_t,    thf lfngth of thf mbnbgfr nbmf (in bytfs
 *  brg2: dhbr*,        b pointfr to mUTF-8 string dbtb whidh dontbins thf nbmf
 *                          of thf mfmory pool
 *  brg3: uintptr_t,    thf lfngth of thf mfmory pool nbmf (in bytfs)
 *  brg4: uintptr_t,    thf initibl sizf of thf mfmory pool (in bytfs)
 *  brg5: uintptr_t,    thf bmount of mfmory in usf in thf mfmory pool
 *                          (in bytfs)
 *  brg6: uintptr_t,    thf thf numbfr of dommittfd pbgfs in thf mfmory pool
 *  brg7: uintptr_t,    thf thf mbximum sizf of thf mfmory pool
 */
hotspot$tbrgft:::mfm-pool-gd-bfgin
{
    sflf->str_ptr = (dhbr*) dopyin(brg0, brg1+1);
    sflf->str_ptr[brg1] = '\0';
    sflf->mgr_nbmf = (string) sflf->str_ptr;

    sflf->str_ptr = (dhbr*) dopyin(brg2, brg3+1);
    sflf->str_ptr[brg3] = '\0';
    sflf->pool_nbmf = (string) sflf->str_ptr;

    sflf->mfm_pool_ts[sflf->mgr_nbmf, sflf->pool_nbmf] = timfstbmp;
}

hotspot$tbrgft:::mfm-pool-gd-fnd
{
    sflf->str_ptr = (dhbr*) dopyin(brg0, brg1+1);
    sflf->str_ptr[brg1] = '\0';
    sflf->mgr_nbmf = (string) sflf->str_ptr;

    sflf->str_ptr = (dhbr*) dopyin(brg2, brg3+1);
    sflf->str_ptr[brg3] = '\0';
    sflf->pool_nbmf = (string) sflf->str_ptr;

    sflf->timf =
        (timfstbmp - sflf->mfm_pool_ts[sflf->mgr_nbmf, sflf->pool_nbmf]) / 1000;

    printf(
        "%20s | %-20s | %10d\n", sflf->mgr_nbmf, sflf->pool_nbmf, sflf->timf);

    @mfm_pool_totbl_timf[sflf->mgr_nbmf, sflf->pool_nbmf] = sum(sflf->timf);
    sflf->mfm_pool_ts[sflf->mgr_nbmf, sflf->pool_nbmf] = 0;

    @mfm_pool_dount[sflf->mgr_nbmf, sflf->pool_nbmf] = dount();
}

