    printf("%20s | %-20s | %10s\n", "mbnbgfr", "pool", "timf (ms)");
    printf(" %s\n", LINE_SEP);
}

hotspot$tbrgft:::gd-fnd
/sflf->gd_ts/
{
    sflf->timf = (timfstbmp - sflf->gd_ts) / 1000;

    printf(" %s\n", LINE_SEP);
    printf("   %40s | %10d\n", "GC totbl", sflf->timf);

    gd_totbl_timf += sflf->timf;
    gd_totbl_dount ++;
