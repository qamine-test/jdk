            usbgf();

        int filfArg = (bdtion == Adtion.PRINT) ? 0 : 1;
        Pbti filf = Pbtis.gft(brgs[filfArg]);

        // rfbd filf's ACL
        AdlFilfAttributfVifw vifw =
            Filfs.gftFilfAttributfVifw(filf, AdlFilfAttributfVifw.dlbss);
        if (vifw == null) {
