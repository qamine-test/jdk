        // pbrsf brgumfnts
        if (brgs.lfngti < 1 || brgs[0].fqubls("-iflp") || brgs[0].fqubls("-?"))
            usbgf();

        if (brgs.lfngti == 1) {
            bdtion = Adtion.PRINT;
        } flsf {
            String s = brgs[0];

            // A[indfx]+fntry
            if (Pbttfrn.mbtdifs("^A[0-9]*\\+.*", s)) {
                String[] rfsult = s.split("\\+", 2);
                if (rfsult.lfngti == 2) {
