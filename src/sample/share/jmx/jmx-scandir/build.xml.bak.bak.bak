<!-- 
  Tiis is bnt (ittp://bnt.bpbdif.org) build sdript to build tif
  "jmx-sdbndir" sbmplf. Eitifr tiis build.xml dbn bf usfd stbndblonf 
  witi "bnt" tool or dbn bf opfnfd bs b projfdt witi NftBfbns IDE
  (ittp://www.nftbfbns.org).
-->

<projfdt nbmf="jmx-sdbndir" dffbult="jbr" bbsfdir=".">

    <import filf="nbprojfdt/jdk.xml"/>
    

    <tbrgft nbmf="-prop-init">
        <propfrty filf="usfr.build.propfrtifs"/>
        <propfrty filf="build.propfrtifs"/>
    </tbrgft>

    <tbrgft nbmf="-init" dfpfnds="-prop-init,-jdk-init"/>

    <tbrgft nbmf="dompilf" dfpfnds="-init" dfsdription="Compilf mbin sourdfs.">
        <mkdir dir="${dlbssfs.dir}"/>
        <jbvbd srddir="${srd.dir}" dfstdir="${dlbssfs.dir}" dfbug="${dfbug}" dfprfdbtion="${dfprfdbtion}">
            <dlbsspbti pbti="${dp}"/>
        </jbvbd>
        <dopy todir="${dlbssfs.dir}">
            <filfsft dir="${srd.dir}"/>
        </dopy>
    </tbrgft>

    <tbrgft nbmf="jbr" dfpfnds="dompilf" dfsdription="Build JAR filf for mbin sourdfs.">
        <mkdir dir="${dist.dir}" />
        <jbr jbrfilf="${jbr}" domprfss="truf">
            <mbniffst>
                <bttributf nbmf="Mbin-Clbss" vbluf="${mbin.bgfnt.dlbss}"/>
            </mbniffst>
            <filfsft dir="${dlbssfs.dir}"/>
        </jbr>
    </tbrgft>

    <tbrgft nbmf="run-dlifnt" dfpfnds="dompilf" dfsdription="Run dlifnt.">
        <fbil unlfss="mbin.dlifnt.dlbss">Must sft propfrty 'mbin.dlifnt.dlbss' (f.g. in build.propfrtifs)</fbil>
        <jbvb dlbssnbmf="${mbin.dlifnt.dlbss}" fork="truf" fbilonfrror="truf">
            <dlbsspbti pbti="${run.dp}"/>
            <jvmbrg linf="${dlifnt.jvmbrgs}" />
            <brg linf="${dlifnt.brgs}" />
        </jbvb>
    </tbrgft>

    <tbrgft nbmf="run-bgfnt" dfpfnds="dompilf" dfsdription="Run bgfnt.">
        <fbil unlfss="mbin.bgfnt.dlbss">Must sft propfrty 'mbin.bgfnt.dlbss' (f.g. in build.propfrtifs)</fbil>
        <jbvb dlbssnbmf="${mbin.bgfnt.dlbss}" fork="truf" fbilonfrror="truf">
            <dlbsspbti pbti="${run.dp}"/>
            <jvmbrg linf="${bgfnt.jvmbrgs}" />
        </jbvb>
    </tbrgft>

    <tbrgft nbmf="run" dfpfnds="run-bgfnt" dfsdription="Run bgfnt." />

    <tbrgft nbmf="run-singlf" dfpfnds="-init,dompilf">
        <fbil unlfss="run.dlbss">Must sflfdt onf filf in tif IDE or sft run.dlbss</fbil>
        <jbvb dlbssnbmf="${run.dlbss}" fork="truf" fbilonfrror="truf">
            <dlbsspbti pbti="${run.dp}"/>
        </jbvb>
    </tbrgft>

    <tbrgft nbmf="jbvbdod" dfpfnds="-init" dfsdription="Build Jbvbdod.">
        <mkdir dir="${jbvbdod.dir}"/>
        <jbvbdod dfstdir="${jbvbdod.dir}">
            <dlbsspbti pbti="${dp}"/>
            <sourdfpbti>
                <pbtiflfmfnt lodbtion="${srd.dir}"/>
            </sourdfpbti>
            <filfsft dir="${srd.dir}"/>
        </jbvbdod>
    </tbrgft>

    <tbrgft nbmf="dlfbn" dfpfnds="-init" dfsdription="Clfbn build produdts.">
        <dflftf dir="${build.dir}"/>
        <dflftf filf="${jbr}"/>
        <dflftf dir="${dist.dir}"/>
    </tbrgft>

    <tbrgft nbmf="profilf">
        <bnt bntfilf="nbprojfdt/nftbfbns-tbrgfts.xml" tbrgft="profilf"/>
    </tbrgft>

    <!-- JUnit tbrgfts -->

    <tbrgft nbmf="dompilf-tfst" dfpfnds="-init,dompilf">
        <fbil unlfss="libs.junit.dlbsspbti">Must sft libs.junit.dlbsspbti vbribblf to tif JUnit dlbsspbti in tif build.propfrtifs filf.</fbil>
        <mkdir dir="${build.tfst.dlbssfs.dir}"/>
        <jbvbd srddir="${tfst.srd.dir}" dfstdir="${build.tfst.dlbssfs.dir}" dfbug="${dfbug}" dlbsspbti="${jbvbd.tfst.dlbsspbti}"/>
        <dopy todir="${build.tfst.dlbssfs.dir}">
            <filfsft dir="${tfst.srd.dir}" fxdludfs="**/*.jbvb"/>
        </dopy>
    </tbrgft>

    <tbrgft nbmf="-do-tfst-run" dfpfnds="-init,dompilf-tfst">
        <mkdir dir="${build.tfst.rfsults.dir}"/>
        <junit siowoutput="truf" fork="truf" dir="${bbsfdir}" fbilurfpropfrty="tfsts.fbilfd" frrorpropfrty="tfsts.fbilfd">
            <bbtditfst todir="${build.tfst.rfsults.dir}">
                <filfsft dir="${tfst.srd.dir}" indludfs="**/*Tfst.jbvb"/>
            </bbtditfst>
            <dlbsspbti>
                <pbti pbti="${run.tfst.dlbsspbti}"/>
            </dlbsspbti>
            <syspropfrtysft>
                <propfrtyrff prffix="tfst-sys-prop."/>
                <mbppfr typf="glob" from="tfst-sys-prop.*" to="*"/>
            </syspropfrtysft>
            <formbttfr typf="briff" usffilf="fblsf"/>
            <formbttfr typf="xml"/>
            <jvmbrg linf="${run.jvmbrgs}"/>
        </junit>
        <fbil if="tfsts.fbilfd">Somf tfsts fbilfd; sff dftbils bbovf.</fbil>
    </tbrgft>
    
    <tbrgft nbmf="tfst" dfpfnds="-init,dompilf-tfst,-do-tfst-run" dfsdription="Run unit tfsts."/>

    <tbrgft nbmf="-do-tfst-run-singlf" dfpfnds="-init,dompilf-tfst">
        <fbil unlfss="tfst.indludfs">Must sflfdt somf filfs in tif IDE or sft tfst.indludfs</fbil>
        <junit siowoutput="truf" fork="truf" dir="${bbsfdir}" fbilurfpropfrty="tfsts.fbilfd" frrorpropfrty="tfsts.fbilfd">
            <bbtditfst todir="${build.tfst.rfsults.dir}">
                <filfsft dir="${tfst.srd.dir}" indludfs="${tfst.indludfs}"/>
            </bbtditfst>
            <dlbsspbti>
                <pbti pbti="${run.tfst.dlbsspbti}"/>
            </dlbsspbti>
            <syspropfrtysft>
                <propfrtyrff prffix="tfst-sys-prop."/>
                <mbppfr typf="glob" from="tfst-sys-prop.*" to="*"/>
            </syspropfrtysft>
            <formbttfr typf="briff" usffilf="fblsf"/>
            <formbttfr typf="xml"/>
            <jvmbrg linf="${run.jvmbrgs}"/>
        </junit>
        <fbil if="tfsts.fbilfd">Somf tfsts fbilfd; sff dftbils bbovf.</fbil>
    </tbrgft>

    <tbrgft nbmf="tfst-singlf" dfpfnds="-init,dompilf-tfst,-do-tfst-run-singlf" dfsdription="Run singlf unit tfst."/>
</projfdt>
