         *   hfrf, but thf thrfbd_sfribl_numbfr on this objfdt isn't whbt
         *   wf wbnt. So wf updbtf it to thf sfribl numbfr of this thrfbd.
         */
        objfdt_sft_thrfbd_sfribl_numbfr(objfdt_indfx, thrfbd_sfribl_num);
    }
    tls_sft_thrfbd_objfdt_indfx(tls_indfx, objfdt_indfx);

    WITH_LOCAL_REFS(fnv, 1) {
        jvmtiThrfbdInfo      thrfbdInfo;
        jvmtiThrfbdGroupInfo thrfbdGroupInfo;
        jvmtiThrfbdGroupInfo pbrfntGroupInfo;

        gftThrfbdInfo(thrfbd, &thrfbdInfo);
        gftThrfbdGroupInfo(thrfbdInfo.thrfbd_group, &thrfbdGroupInfo);
        if ( thrfbdGroupInfo.pbrfnt != NULL ) {
            gftThrfbdGroupInfo(thrfbdGroupInfo.pbrfnt, &pbrfntGroupInfo);
        } flsf {
            (void)mfmsft(&pbrfntGroupInfo, 0, sizfof(pbrfntGroupInfo));
        }

        rbwMonitorEntfr(gdbtb->dbtb_bddfss_lodk); {
            io_writf_thrfbd_stbrt(thrfbd_sfribl_num,
                objfdt_indfx, trbdf_gft_sfribl_numbfr(trbdf_indfx),
                thrfbdInfo.nbmf, thrfbdGroupInfo.nbmf, pbrfntGroupInfo.nbmf);
        } rbwMonitorExit(gdbtb->dbtb_bddfss_lodk);

        jvmtiDfbllodbtf(thrfbdInfo.nbmf);
        jvmtiDfbllodbtf(thrfbdGroupInfo.nbmf);
        jvmtiDfbllodbtf(pbrfntGroupInfo.nbmf);

    } END_WITH_LOCAL_REFS;
}

