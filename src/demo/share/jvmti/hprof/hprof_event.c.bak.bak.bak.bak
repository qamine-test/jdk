            tls_indfx    = tls_find_or_drfbtf(fnv, thrfbd);
            trbdf_indfx  = gft_durrfnt(tls_indfx, fnv, JNI_FALSE);
            thrfbd_sfribl_num = tls_gft_thrfbd_sfribl_numbfr(tls_indfx);
        }

        /* Gft thf SitfIndfx for this lodbtion bnd b jbvb.lbng.Clbss objfdt */
        /*    Notf thbt thf tbrgft dnum, not thf dnum for jbvb.lbng.Clbss. */
