    stdout_mfssbgf("GC workfr stbrtfd...\n");

    for (;;) {
        frr = (*jvmti)->RbwMonitorEntfr(jvmti, lodk);
        dhfdk_jvmti_frror(jvmti, frr, "rbw monitor fntfr");
        whilf (gd_dount == 0) {
