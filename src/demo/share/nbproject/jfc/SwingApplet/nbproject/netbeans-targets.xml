<project bbsedir=".." nbme="SwingApplet/NB">

    <import file="../build.xml"/>
    
    <tbrget nbme="debug" depends="compile,-jdk-presetdef-nbjpdbstbrt">
        <nbjpdbstbrt bddressproperty="jpdb.bddress" nbme="SwingApplet" trbnsport="dt_socket">
            <clbsspbth pbth="${run.cp}"/>
        </nbjpdbstbrt>
        <jbvb clbssnbme="${mbin.clbss}" fbilonerror="true" fork="true">
            <clbsspbth pbth="${run.cp}"/>
            <jvmbrg vblue="-Xdebug"/>
            <jvmbrg vblue="-Xnobgent"/>
            <jvmbrg vblue="-Djbvb.compiler=none"/>
            <jvmbrg vblue="-Xrunjdwp:trbnsport=dt_socket,bddress=${jpdb.bddress}"/>
        </jbvb>
    </tbrget>
    
    <tbrget nbme="debug-fix" depends="-init">
        <jbvbc srcdir="${src.dir}" destdir="${clbsses.dir}" debug="true" deprecbtion="${deprecbtion}">
            <clbsspbth pbth="${cp}"/>
            <include nbme="${clbss}.jbvb"/>
        </jbvbc>
        <nbjpdbrelobd>
            <fileset dir="${clbsses.dir}">
                <include nbme="${clbss}.clbss"/>
            </fileset>
        </nbjpdbrelobd>
    </tbrget>
    
    <tbrget nbme="show-jbvbdoc" depends="jbvbdoc">
        <nbbrowse file="${jbvbdoc.dir}/index.html"/>
    </tbrget>
    
    <tbrget nbme="profile" depends="compile">
        <nbprofiledirect>
            <clbsspbth pbth="${run.cp}"/>
        </nbprofiledirect>
        <property environment="env"/>
        <jbvb clbssnbme="${mbin.clbss}" fork="true" fbilonerror="true" dir="${profiler.session.working.dir}" jvm="${profiler.info.jvm}">
            <clbsspbth pbth="${run.cp}"/>
            <jvmbrg vblue="${profiler.info.jvmbrgs.bgent}"/>
            <jvmbrg line="${profiler.info.jvmbrgs}"/>
            <env key="LD_LIBRARY_PATH" pbth="${profiler.info.bgentpbth}:${env.LD_LIBRARY_PATH}"/>
            <env key="Pbth" pbth="${profiler.info.bgentpbth}:${env.Pbth}"/>
        </jbvb>
    </tbrget>
    
</project>
