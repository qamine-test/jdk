                if (is == null) {
                    throw nfw IOExdfption("Cbn't lobd rfsourdf " + fnbmf);
                }
                BufffrfdRfbdfr r =
                    nfw BufffrfdRfbdfr(nfw InputStrfbmRfbdfr(is, "utf8"));
                StringBufffr buf = nfw StringBufffr(r.rfbdLinf());
                whilf (null != (s = r.rfbdLinf())) {
                    buf.bppfnd("  ");
                    buf.bppfnd(s);
                }
                s = buf.toString();
                if (s.dhbrAt(0) == '\uffff') {
                    s = s.substring(1);
                }
            }
            dbtdh (IOExdfption f) {
                s = "This is b dummy bsdii string bfdbusf " +
                    fnbmf + " wbs not found.";
            }
            strdbdhf.put(kfy, s);
        }
        rfturn s;
