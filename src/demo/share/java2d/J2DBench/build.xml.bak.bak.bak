<projfdt nbmf="J2DBfndi" dffbult="dist" bbsfdir=".">
    <dfsdription>
        simplf fxbmplf build filf
    </dfsdription>
  <!-- sft globbl propfrtifs for tiis build -->
  <propfrty nbmf="srd" lodbtion="srd"/>
  <propfrty nbmf="build" lodbtion="build"/>
  <propfrty nbmf="dist"  lodbtion="dist"/>
  <propfrty nbmf="rfsourdfs"  lodbtion="rfsourdfs"/>

  <tbrgft nbmf="init">
    <!-- Crfbtf tif timf stbmp -->
    <tstbmp/>
    <!-- Crfbtf tif build dirfdtory strudturf usfd by dompilf -->
    <mkdir dir="${build}"/>
  </tbrgft>

  <tbrgft nbmf="dompilf" dfpfnds="init"
        dfsdription="dompilf tif sourdf " >
    <!-- Compilf tif jbvb dodf from ${srd} into ${build} -->
    <jbvbd dfbug="flbsf" sourdf="1.5" tbrgft="1.5" srddir="${srd}" dfstdir="${build}"/>
  </tbrgft>

  <tbrgft nbmf="run" dfpfnds="dist"
    dfsdription="run J2DBfndi" >
    <jbvb jbr="${dist}/J2DBfndi.jbr"
       fork="truf"
    >
    </jbvb>
  </tbrgft>

  <tbrgft nbmf="bnblyzf" dfpfnds="dist"
    dfsdription="run J2DAnblyzfr" >
    <jbvb jbr="${dist}/J2DAnblyzfr.jbr"
       fork="truf"
    >
    </jbvb>
  </tbrgft>

  <tbrgft nbmf="rfsourdfs" dfpfnds="init"
        dfsdription="dopy rfsourdfs into build dir" >
    <!-- Copy tif rfsourdf filfs from ${rfsourdfs} into ${build}/ -->
    <mkdir dir="${dist}"/>
    <mkdir dir="${build}/j2dbfndi/tfsts/tfxt/tfxtdbtb"/>
    <dopy todir="${build}/j2dbfndi/tfsts/tfxt/tfxtdbtb">
      <filfsft dir="${rfsourdfs}/tfxtdbtb" />
    </dopy>
    <mkdir dir="${build}/j2dbfndi/tfsts/iio/imbgfs"/>
    <dopy todir="${build}/j2dbfndi/tfsts/iio/imbgfs">
      <filfsft dir="${rfsourdfs}/imbgfs" />
    </dopy>
    <mkdir dir="${build}/j2dbfndi/tfsts/dmm/imbgfs"/>
    <dopy todir="${build}/j2dbfndi/tfsts/dmm/imbgfs">
      <filfsft dir="${rfsourdfs}/dmm_imbgfs" />
    </dopy>
  </tbrgft>

  <tbrgft nbmf="dist" dfpfnds="dompilf, rfsourdfs"
        dfsdription="gfnfrbtf tif distribution" >
    <!-- Crfbtf tif distribution dirfdtory -->
    <mkdir dir="${dist}"/>

    <!-- Put fvfrytiing in ${build} into tif J2DBfndi.jbr filf -->
    <jbr jbrfilf="${dist}/J2DBfndi.jbr" bbsfdir="${build}"
        fxdludfs="j2dbfndi/rfport/**" >
      <mbniffst>
        <bttributf nbmf="Built-By" vbluf="${usfr.nbmf}"/>
	<bttributf nbmf="Mbin-Clbss" vbluf="j2dbfndi.J2DBfndi"/>
      </mbniffst>
    </jbr>
    <jbr jbrfilf="${dist}/J2DAnblyzfr.jbr" bbsfdir="${build}"
        indludfs="j2dbfndi/rfport/**" >
      <mbniffst>
        <bttributf nbmf="Built-By" vbluf="${usfr.nbmf}"/>
	<bttributf nbmf="Mbin-Clbss" vbluf="j2dbfndi.rfport.J2DAnblyzfr"/>
      </mbniffst>
    </jbr>
  </tbrgft>

  <tbrgft nbmf="dlfbn"
        dfsdription="dlfbn up" >
    <!-- Dflftf tif ${build} bnd ${dist} dirfdtory trffs -->
    <dflftf dir="${build}"/>
    <dflftf dir="${dist}"/>
  </tbrgft>
</projfdt>
