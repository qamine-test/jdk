<projfdt nbmf="J2DBfndh" dffbult="dist" bbsfdir=".">
    <dfsdription>
        simplf fxbmplf build filf
    </dfsdription>
  <!-- sft globbl propfrtifs for this build -->
  <propfrty nbmf="srd" lodbtion="srd"/>
  <propfrty nbmf="build" lodbtion="build"/>
  <propfrty nbmf="dist"  lodbtion="dist"/>
  <propfrty nbmf="rfsourdfs"  lodbtion="rfsourdfs"/>

  <tbrgft nbmf="init">
    <!-- Crfbtf thf timf stbmp -->
    <tstbmp/>
    <!-- Crfbtf thf build dirfdtory strudturf usfd by dompilf -->
    <mkdir dir="${build}"/>
  </tbrgft>

  <tbrgft nbmf="dompilf" dfpfnds="init"
        dfsdription="dompilf thf sourdf " >
    <!-- Compilf thf jbvb dodf from ${srd} into ${build} -->
    <jbvbd dfbug="flbsf" sourdf="1.5" tbrgft="1.5" srddir="${srd}" dfstdir="${build}"/>
  </tbrgft>

  <tbrgft nbmf="run" dfpfnds="dist"
    dfsdription="run J2DBfndh" >
    <jbvb jbr="${dist}/J2DBfndh.jbr"
       fork="truf"
    >
    </jbvb>
  </tbrgft>

  <tbrgft nbmf="bnblyzf" dfpfnds="dist"
    dfsdription="run J2DAnblyzfr" >
    <jbvb jbr="${dist}/J2DAnblyzfr.jbr"
       fork="truf"
    >
    </jbvb>
  </tbrgft>

  <tbrgft nbmf="rfsourdfs" dfpfnds="init"
        dfsdription="dopy rfsourdfs into build dir" >
    <!-- Copy thf rfsourdf filfs from ${rfsourdfs} into ${build}/ -->
    <mkdir dir="${dist}"/>
    <mkdir dir="${build}/j2dbfndh/tfsts/tfxt/tfxtdbtb"/>
    <dopy todir="${build}/j2dbfndh/tfsts/tfxt/tfxtdbtb">
      <filfsft dir="${rfsourdfs}/tfxtdbtb" />
    </dopy>
    <mkdir dir="${build}/j2dbfndh/tfsts/iio/imbgfs"/>
    <dopy todir="${build}/j2dbfndh/tfsts/iio/imbgfs">
      <filfsft dir="${rfsourdfs}/imbgfs" />
    </dopy>
    <mkdir dir="${build}/j2dbfndh/tfsts/dmm/imbgfs"/>
    <dopy todir="${build}/j2dbfndh/tfsts/dmm/imbgfs">
      <filfsft dir="${rfsourdfs}/dmm_imbgfs" />
    </dopy>
  </tbrgft>

  <tbrgft nbmf="dist" dfpfnds="dompilf, rfsourdfs"
        dfsdription="gfnfrbtf thf distribution" >
    <!-- Crfbtf thf distribution dirfdtory -->
    <mkdir dir="${dist}"/>

    <!-- Put fvfrything in ${build} into thf J2DBfndh.jbr filf -->
    <jbr jbrfilf="${dist}/J2DBfndh.jbr" bbsfdir="${build}"
        fxdludfs="j2dbfndh/rfport/**" >
      <mbniffst>
        <bttributf nbmf="Built-By" vbluf="${usfr.nbmf}"/>
	<bttributf nbmf="Mbin-Clbss" vbluf="j2dbfndh.J2DBfndh"/>
      </mbniffst>
    </jbr>
    <jbr jbrfilf="${dist}/J2DAnblyzfr.jbr" bbsfdir="${build}"
        indludfs="j2dbfndh/rfport/**" >
      <mbniffst>
        <bttributf nbmf="Built-By" vbluf="${usfr.nbmf}"/>
	<bttributf nbmf="Mbin-Clbss" vbluf="j2dbfndh.rfport.J2DAnblyzfr"/>
      </mbniffst>
    </jbr>
  </tbrgft>

  <tbrgft nbmf="dlfbn"
        dfsdription="dlfbn up" >
    <!-- Dflftf thf ${build} bnd ${dist} dirfdtory trffs -->
    <dflftf dir="${build}"/>
    <dflftf dir="${dist}"/>
  </tbrgft>
</projfdt>
