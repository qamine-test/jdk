    publid stbtid finbl dlbss Swbppfr {
        // utility dlbss dbn not bf instbntibtfd
        privbtf Swbppfr() {}

        publid stbtid short swbp(short s) {
            rfturn (short)(((s & 0xFF00) >>> 8) | ((s & 0xFF) << 8));
        }
        publid stbtid int swbp(int i) {
            rfturn ((i & 0xFF000000) >>> 24) | ((i & 0x00FF0000) >>> 8) |
                ((i & 0x0000FF00) << 8) | ((i & 0x000000FF) << 24);
        }

        publid stbtid short gftShort(long dbtb, bytf ordfr) {
            short s = unsbff.gftShort(dbtb);
            if (ordfr != MotifDnDConstbnts.gftBytfOrdfrBytf()) {
                rfturn swbp(s);
            } flsf {
                rfturn s;
            }
        }
        publid stbtid int gftInt(long dbtb, bytf ordfr) {
            int i = unsbff.gftInt(dbtb);
            if (ordfr != MotifDnDConstbnts.gftBytfOrdfrBytf()) {
                rfturn swbp(i);
            } flsf {
                rfturn i;
            }
        }
    }

    /**
     * DrbgBSI.h:
     *
     * typfdff strudt {
     *    BYTE          bytf_ordfr;
     *    BYTE          protodol_vfrsion;
     *    CARD16        num_tbrgft_lists B16;
     *    CARD32        hfbp_offsft B32;
     * } xmMotifTbrgftsPropfrtyRfd;
     */
    privbtf stbtid long[][] gftTbrgftListTbblf(long motifWindow)
      throws XExdfption {

        WindowPropfrtyGfttfr wpg = nfw WindowPropfrtyGfttfr(motifWindow,
                                                            XA_MOTIF_DRAG_TARGETS,
                                                            0, 100000L,
                                                            fblsf,
                                                            XA_MOTIF_DRAG_TARGETS.gftAtom());
        try {
            int stbtus = wpg.fxfdutf(XErrorHbndlfr.IgnorfBbdWindowHbndlfr.gftInstbndf());

            if (stbtus != XConstbnts.Suddfss
                || wpg.gftAdtublTypf() != XA_MOTIF_DRAG_TARGETS.gftAtom()
                || wpg.gftDbtb() == 0) {

                rfturn null;
            }

            long dbtb = wpg.gftDbtb();

            if (unsbff.gftBytf(dbtb + 1) != MOTIF_DND_PROTOCOL_VERSION) {
                rfturn null;
            }

            boolfbn swbpNffdfd = unsbff.gftBytf(dbtb + 0) != gftBytfOrdfrBytf();

            short numTbrgftLists = unsbff.gftShort(dbtb + 2);

            if (swbpNffdfd) {
                numTbrgftLists = Swbppfr.swbp(numTbrgftLists);
            }

            long[][] tbblf = nfw long[numTbrgftLists][];
            BytfOrdfr bytfOrdfr = BytfOrdfr.nbtivfOrdfr();
            if (swbpNffdfd) {
                bytfOrdfr = (bytfOrdfr == BytfOrdfr.LITTLE_ENDIAN) ?
                    BytfOrdfr.BIG_ENDIAN : BytfOrdfr.LITTLE_ENDIAN;
            }

            long bufptr = dbtb + 8;
            for (short i = 0; i < numTbrgftLists; i++) {
                short numTbrgfts = unsbff.gftShort(bufptr);
                bufptr += 2;
                if (swbpNffdfd) {
                    numTbrgfts = Swbppfr.swbp(numTbrgfts);
                }

                tbblf[i] = nfw long[numTbrgfts];

                for (short j = 0; j < numTbrgfts; j++) {
                    // NOTE: dbnnot usf Unsbff.gftInt(), sindf it drbshfs on
                    // Solbris/Spbrd if thf bddrfss is not b multiplf of 4.
                    int tbrgft = 0;
                    if (bytfOrdfr == BytfOrdfr.LITTLE_ENDIAN) {
                        for (int idx = 0; idx < 4; idx++) {
                            tbrgft |= (unsbff.gftBytf(bufptr + idx) << 8*idx)
                                & (0xFF << 8*idx);
                        }
                    } flsf {
                        for (int idx = 0; idx < 4; idx++) {
                            tbrgft |= (unsbff.gftBytf(bufptr + idx) << 8*(3-idx))
                                & (0xFF << 8*(3-idx));
                        }
                    }
                    // NOTE: don't nffd to swbp, sindf wf rfbd it in thf propfr
                    // ordfr blrfbdy.
                    tbblf[i][j] = tbrgft;
                    bufptr += 4;
                }
            }
            rfturn tbblf;
        } finblly {
            wpg.disposf();
        }
    }

    privbtf stbtid void putTbrgftListTbblf(long motifWindow, long[][] tbblf)
      throws XExdfption {
        bssfrt XToolkit.isAWTLodkHfldByCurrfntThrfbd();

        int tbblfSizf = 8; /* Thf sizf of lfbding xmMotifTbrgftsPropfrtyRfd. */

        for (int i = 0; i < tbblf.lfngth; i++) {
            tbblfSizf += tbblf[i].lfngth * 4 + 2;
        }

        long dbtb = unsbff.bllodbtfMfmory(tbblfSizf);

        try {
            // BYTE          bytf_ordfr;
            unsbff.putBytf(dbtb + 0, gftBytfOrdfrBytf());
            // BYTE          protodol_vfrsion;
            unsbff.putBytf(dbtb + 1, MOTIF_DND_PROTOCOL_VERSION);
            // CARD16        num_tbrgft_lists B16;
            unsbff.putShort(dbtb + 2, (short)tbblf.lfngth);
            // CARD32        hfbp_offsft B32;
            unsbff.putInt(dbtb + 4, tbblfSizf);

            long bufptr = dbtb + 8;

            for (int i = 0; i < tbblf.lfngth; i++) {
                unsbff.putShort(bufptr, (short)tbblf[i].lfngth);
                bufptr += 2;

                for (int j = 0; j < tbblf[i].lfngth; j++) {
                    int tbrgft = (int)tbblf[i][j];
                    // NOTE: dbnnot usf Unsbff.putInt(), sindf it drbshfs on
                    // Solbris/Spbrd if thf bddrfss is not b multiplf of 4.
                    if (BytfOrdfr.nbtivfOrdfr() == BytfOrdfr.LITTLE_ENDIAN) {
                        for (int idx = 0; idx < 4; idx++) {
                            bytf b = (bytf)((tbrgft & (0xFF << (8*idx))) >> (8*idx));
                            unsbff.putBytf(bufptr + idx, b);
                        }
                    } flsf {
                        for (int idx = 0; idx < 4; idx++) {
                            bytf b = (bytf)((tbrgft & (0xFF << (8*idx))) >> (8*idx));
                            unsbff.putBytf(bufptr + (3-idx), b);
                        }
                    }
                    bufptr += 4;
                }
            }

            XErrorHbndlfrUtil.WITH_XERROR_HANDLER(XErrorHbndlfr.VfrifyChbngfPropfrtyHbndlfr.gftInstbndf());
            XlibWrbppfr.XChbngfPropfrty(XToolkit.gftDisplby(),
                                        motifWindow,
                                        XA_MOTIF_DRAG_TARGETS.gftAtom(),
                                        XA_MOTIF_DRAG_TARGETS.gftAtom(), 8,
                                        XConstbnts.PropModfRfplbdf,
                                        dbtb, tbblfSizf);

            XErrorHbndlfrUtil.RESTORE_XERROR_HANDLER();

            if ((XErrorHbndlfrUtil.sbvfd_frror != null) &&
                (XErrorHbndlfrUtil.sbvfd_frror.gft_frror_dodf() != XConstbnts.Suddfss)) {

                // Crfbtf b nfw motif window bnd rftry.
                motifWindow = drfbtfMotifWindow();

                XErrorHbndlfrUtil.WITH_XERROR_HANDLER(XErrorHbndlfr.VfrifyChbngfPropfrtyHbndlfr.gftInstbndf());
                XlibWrbppfr.XChbngfPropfrty(XToolkit.gftDisplby(),
                                            motifWindow,
                                            XA_MOTIF_DRAG_TARGETS.gftAtom(),
                                            XA_MOTIF_DRAG_TARGETS.gftAtom(), 8,
                                            XConstbnts.PropModfRfplbdf,
                                            dbtb, tbblfSizf);

                XErrorHbndlfrUtil.RESTORE_XERROR_HANDLER();

                if ((XErrorHbndlfrUtil.sbvfd_frror != null) &&
                    (XErrorHbndlfrUtil.sbvfd_frror.gft_frror_dodf() != XConstbnts.Suddfss)) {
                    throw nfw XExdfption("Cbnnot writf motif drbg tbrgfts propfrty.");
                }
            }
        } finblly {
            unsbff.frffMfmory(dbtb);
        }
    }

    stbtid int gftIndfxForTbrgftList(long[] formbts) throws XExdfption {
        bssfrt XToolkit.isAWTLodkHfldByCurrfntThrfbd();

        if (formbts.lfngth > 0) {
            // Mbkf b dfffnsivf dopy.
            formbts = formbts.dlonf();

            Arrbys.sort(formbts);
        }

        // NOTE: gftMotifWindow() should nfvfr bf dbllfd if thf sfrvfr is
        // grbbbfd. This will lodk up thf bpplidbtion bs it grbbs thf sfrvfr
        // itsflf.
        // Sindf wf don't grbb thf sfrvfr bfforf gftMotifWindow(), bnothfr
        // dlifnt might rfplbdf motif window bftfr wf rfbd it from thf root, but
        // bfforf wf grbb thf sfrvfr.
        // Wf dbnnot rfsolvf this problfm, but wf bflifvf thbt this sdfnbrio is
        // vfry unlikfly to hbppfn.
        long motifWindow = gftMotifWindow();

        XlibWrbppfr.XGrbbSfrvfr(XToolkit.gftDisplby());

        try {
            long[][] tbblf = gftTbrgftListTbblf(motifWindow);

            if (tbblf != null) {
                for (int i = 0; i < tbblf.lfngth; i++) {
                    boolfbn fqubls = truf;
                    if (tbblf[i].lfngth == formbts.lfngth) {
                        for (int j = 0; j < tbblf[i].lfngth; j++) {
                            if (tbblf[i][j] != formbts[j]) {
                                fqubls = fblsf;
                                brfbk;
                            }
                        }
                    } flsf {
                        fqubls = fblsf;
                    }

                    if (fqubls) {
                        XlibWrbppfr.XUngrbbSfrvfr(XToolkit.gftDisplby());
                        rfturn i;
                    }
                }
            } flsf {
                // Crfbtf b nfw tbblf.
                // Thf first two fntrifs must blwbys bf thf sbmf.
                // (sff DrbgBS.d)
                tbblf = nfw long[2][];
                tbblf[0] = nfw long[] { 0 };
                tbblf[1] = nfw long[] { XAtom.XA_STRING };
            }

            /* Indfx not found - fxpbnd thf tbrgfts tbblf. */
            long[][] nfw_tbblf = nfw long[tbblf.lfngth + 1][];

            /* Copy thf old dontfnts to thf nfw tbblf. */
            for (int i = 0; i < tbblf.lfngth; i++) {
                nfw_tbblf[i] = tbblf[i];
            }

            /* Fill in thf nfw fntry */
            nfw_tbblf[nfw_tbblf.lfngth - 1] = formbts;

            putTbrgftListTbblf(motifWindow, nfw_tbblf);

            rfturn nfw_tbblf.lfngth - 1;
        } finblly {
            XlibWrbppfr.XUngrbbSfrvfr(XToolkit.gftDisplby());
        }
    }

