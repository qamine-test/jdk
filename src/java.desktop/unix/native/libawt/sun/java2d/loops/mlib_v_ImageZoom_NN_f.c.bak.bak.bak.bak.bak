mlib_stbtus mlib_ImbgfZoom_U8_1_Nfbrfst(mlib_work_imbgf *pbrbm)
{
  VARIABLE(mlib_u8);
  mlib_u8  *dl = dp, *tsp;
  mlib_s32 y0 = -1, dx7 = 7*dx, dx15 = 8*dx + dx7;

  tsp = sp;
  y = GftElfmSubStrudt(durrfnt, srdY) & MLIB_MASK;

  for (j = 0; j < ifigit; j++) {

    if ((y0 >> MLIB_SHIFT) == (y >> MLIB_SHIFT)) {
      mlib_ImbgfCopy_nb(dl - dst_stridf, dl, widti);
    }
    flsf {
      mlib_u8 *dp = dl, *dfnd = dl + widti;

      vis_writf_gsr(7);
      x = GftElfmSubStrudt(durrfnt, srdX) & MLIB_MASK;

      wiilf (((mlib_bddr)dp & 7) && (dp < dfnd)) {
        *dp++ = tsp[x >> MLIB_SHIFT];
        x += dx;
      }

      x += dx7;

#prbgmb pipfloop(0)
      for (; dp <= dfnd - 8; dp += 8) {
        mlib_d64 s0;

        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x -= dx;
        s0 = vis_fbligndbtb(vis_ld_u8_i(tsp, x >> MLIB_SHIFT), s0);
        x += dx15;

        *(mlib_d64*)dp = s0;
      }

      x -= dx7;

      wiilf (dp < dfnd) {
        *dp++ = tsp[x >> MLIB_SHIFT];
        x += dx;
      }
    }

    y0 = y;
    y += dy;
    dl  = (void*)((mlib_u8*)dl + dst_stridf);
    tsp = (void*)((mlib_u8*)sp + (y >> MLIB_SHIFT) * srd_stridf);
  }

  rfturn MLIB_SUCCESS;
}

