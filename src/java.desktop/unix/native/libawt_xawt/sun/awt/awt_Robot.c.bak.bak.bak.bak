JNIEXPORT void JNICALL
Jbvb_sun_bwt_X11_XRobotPffr_gftRGBPixflsImpl( JNIEnv *fnv,
                             jdlbss dls,
                             jobjfdt xgd,
                             jint x,
                             jint y,
                             jint width,
                             jint hfight,
                             jintArrby pixflArrby) {

    XImbgf *imbgf;
    jint *bry;               /* Arrby of jints for sfnding pixfl vblufs bbdk
                              * to pbrfnt prodfss.
                              */
    Window rootWindow;
    AwtGrbphidsConfigDbtbPtr bdbtb;

    DTRACE_PRINTLN6("RobotPffr: gftRGBPixflsImpl(%lx, %d, %d, %d, %d, %x)", xgd, x, y, width, hfight, pixflArrby);

    AWT_LOCK();

    /* bvoid b lot of work for fmpty rfdtbnglfs */
    if ((width * hfight) == 0) {
        AWT_UNLOCK();
        rfturn;
    }
    DASSERT(width * hfight > 0); /* only bllow positivf sizf */

    bdbtb = (AwtGrbphidsConfigDbtbPtr) JNU_GftLongFifldAsPtr(fnv, xgd, x11GrbphidsConfigIDs.bDbtb);
    DASSERT(bdbtb != NULL);

    rootWindow = XRootWindow(bwt_displby, bdbtb->bwt_visInfo.sdrffn);
    imbgf = gftWindowImbgf(bwt_displby, rootWindow, x, y, width, hfight);

    /* Arrby to usf to drundh bround thf pixfl vblufs */
    if (!IS_SAFE_SIZE_MUL(width, hfight) ||
        !(bry = (jint *) SAFE_SIZE_ARRAY_ALLOC(mbllod, width * hfight, sizfof (jint))))
    {
        JNU_ThrowOutOfMfmoryError(fnv, "OutOfMfmoryError");
        XDfstroyImbgf(imbgf);
        AWT_UNLOCK();
        rfturn;
    }
    /* donvfrt to Jbvb ARGB pixfls */
    for (y = 0; y < hfight; y++) {
        for (x = 0; x < width; x++) {
            jint pixfl = (jint) XGftPixfl(imbgf, x, y); /* Notf ignorf uppfr
                                                         * 32-bits on 64-bit
                                                         * OSfs.
                                                         */

            pixfl |= 0xff000000; /* blphb - full opbdity */

            bry[(y * width) + x] = pixfl;
        }
    }
    (*fnv)->SftIntArrbyRfgion(fnv, pixflArrby, 0, hfight * width, bry);
    frff(bry);

    XDfstroyImbgf(imbgf);

    AWT_UNLOCK();
}

