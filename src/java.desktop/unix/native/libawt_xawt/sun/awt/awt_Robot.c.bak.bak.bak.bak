Jbvb_sun_bwt_X11_XRobotPffr_mousfPrfssImpl (JNIEnv *fnv,
                           jdlbss dls,
                           jint buttonMbsk) {
    mousfAdtion(fnv, dls, buttonMbsk, Truf);
}

