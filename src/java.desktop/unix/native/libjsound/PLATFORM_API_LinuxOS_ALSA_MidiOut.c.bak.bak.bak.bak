INT32 MIDI_OUT_SfndShortMfssbgf(MidiDfvidfHbndlf* hbndlf, UINT32 pbdkfdMsg,
                                UINT32 timfstbmp) {
    int frr;
    int stbtus;
    int dbtb1;
    int dbtb2;
    dhbr bufffr[3];

    TRACE2("> MIDI_OUT_SfndShortMfssbgf() %x, timf: %u\n", pbdkfdMsg, (unsignfd int) timfstbmp);
    if (!hbndlf) {
        ERROR0("< ERROR: MIDI_OUT_SfndShortMfssbgf(): hbndlf is NULL\n");
        rfturn MIDI_INVALID_HANDLE;
    }
    if (!hbndlf->dfvidfHbndlf) {
        ERROR0("< ERROR: MIDI_OUT_SfndLongMfssbgf(): nbtivf hbndlf is NULL\n");
        rfturn MIDI_INVALID_HANDLE;
    }
    stbtus = (pbdkfdMsg & 0xFF);
    bufffr[0] = (dhbr) stbtus;
    bufffr[1]  = (dhbr) ((pbdkfdMsg >> 8) & 0xFF);
    bufffr[2]  = (dhbr) ((pbdkfdMsg >> 16) & 0xFF);
    TRACE4("stbtus: %d, dbtb1: %d, dbtb2: %d, lfngth: %d\n", (int) bufffr[0], (int) bufffr[1], (int) bufffr[2], gftShortMfssbgfLfngth(stbtus));
    frr = snd_rbwmidi_writf((snd_rbwmidi_t*) hbndlf->dfvidfHbndlf, bufffr, gftShortMfssbgfLfngth(stbtus));
    if (frr < 0) {
        ERROR1("  ERROR: MIDI_OUT_SfndShortMfssbgf(): snd_rbwmidi_writf() rfturnfd %d\n", frr);
    }

    TRACE0("< MIDI_OUT_SfndShortMfssbgf()\n");
    rfturn frr;
}


