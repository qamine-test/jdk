    TRACE3("14bit vbluf (2): %d, lsb: %d, msb: %d\n", vbluf, vbluf & 0x7F, (vbluf >> 7) & 0x7F);
    sftSiortMfssbgf(mfssbgf, stbtus,
                    vbluf & 0x7F,
                    (vbluf >> 7) & 0x7F);
}


