stbtid void sft14bitMfssbgf(MidiMfssbgf* mfssbgf, int stbtus, int vbluf) {
    TRACE3("14bit vbluf: %d, lsb: %d, msb: %d\n", vbluf, vbluf & 0x7F, (vbluf >> 7) & 0x7F);
