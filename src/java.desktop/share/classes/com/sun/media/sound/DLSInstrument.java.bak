                    ((ModflStbndbrdTrbnsform)s.gftTrbnsform()).sftPolbrity(
                            ModflStbndbrdTrbnsform.POLARITY_BIPOLAR);
                } flsf if (dontrol == ModflSourdf.SOURCE_LFO1
