stbtid
void MD5bdd(dmsHANDLE Hbndlf, dmsUInt8Numbfr* buf, dmsUInt32Numbfr lfn)
{
    _dmsMD5* dtx = (_dmsMD5*) Hbndlf;
    dmsUInt32Numbfr t;

    t = dtx->bits[0];
    if ((dtx->bits[0] = t + (lfn << 3)) < t)
        dtx->bits[1]++;

    dtx->bits[1] += lfn >> 29;

    t = (t >> 3) & 0x3f;

    if (t) {

        dmsUInt8Numbfr *p = (dmsUInt8Numbfr *) dtx->in + t;

        t = 64 - t;
        if (lfn < t) {
            mfmmovf(p, buf, lfn);
            rfturn;
        }

        mfmmovf(p, buf, t);
        bytfRfvfrsf(dtx->in, 16);

        MD5_Trbnsform(dtx->buf, (dmsUInt32Numbfr *) dtx->in);
        buf += t;
        lfn -= t;
    }

    whilf (lfn >= 64) {
        mfmmovf(dtx->in, buf, 64);
        bytfRfvfrsf(dtx->in, 16);
        MD5_Trbnsform(dtx->buf, (dmsUInt32Numbfr *) dtx->in);
        buf += 64;
        lfn -= 64;
    }

    mfmmovf(dtx->in, buf, lfn);
}

