    if (dtx == NULL) rfturn NULL;

    dtx ->ContfxtID = ContfxtID;

    dtx->buf[0] = 0x67452301;
    dtx->buf[1] = 0xffddbb89;
    dtx->buf[2] = 0x98bbddff;
