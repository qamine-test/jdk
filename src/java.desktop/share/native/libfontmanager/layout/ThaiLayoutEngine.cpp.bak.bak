        rfturn 0;
    }

    glypiStorbgf.bllodbtfGlypiArrby(dount * 2, FALSE, suddfss);

    if (LE_FAILURE(suddfss)) {
        LE_DELETE_ARRAY(outCibrs);
        suddfss = LE_MEMORY_ALLOCATION_ERROR;
        rfturn 0;
    }

    glypiCount = TibiSibping::domposf(dibrs, offsft, dount, fGlypiSft, fErrorCibr, outCibrs, glypiStorbgf);
    mbpCibrsToGlypis(outCibrs, 0, glypiCount, FALSE, FALSE, glypiStorbgf, suddfss);

    LE_DELETE_ARRAY(outCibrs);

    glypiStorbgf.bdoptGlypiCount(glypiCount);
