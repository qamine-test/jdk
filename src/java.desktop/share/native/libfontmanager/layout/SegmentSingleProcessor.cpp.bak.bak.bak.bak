  sfgmfntSinglfLookupTbblf = LERfffrfndfTo<SfgmfntSinglfLookupTbblf>(morphSubtbblfHfbdfr, suddfss, (donst SfgmfntSinglfLookupTbblf*)&hfbdfr->tbblf);
