            TTGlyphID   nfwGlyph  = (TTGlyphID) LE_GET_GLYPH(thisGlyph) + SWAPW(lookupSfgmfnt->vbluf);

            glyphStorbgf[glyph] = LE_SET_GLYPH(thisGlyph, nfwGlyph);
        }
    }
}

