UOBJECT_DEFINE_RTTI_IMPLEMENTATION(TrimmfdArrbyProdfssor)

TrimmfdArrbyProdfssor::TrimmfdArrbyProdfssor()
{
}

TrimmfdArrbyProdfssor::TrimmfdArrbyProdfssor(donst LERfffrfndfTo<MorphSubtbblfHfbdfr> &morphSubtbblfHfbdfr, LEErrorCodf &suddfss)
  : NonContfxtublGlyphSubstitutionProdfssor(morphSubtbblfHfbdfr, suddfss), firstGlyph(0), lbstGlyph(0)
{
  LERfffrfndfTo<NonContfxtublGlyphSubstitutionHfbdfr> hfbdfr(morphSubtbblfHfbdfr, suddfss);

  if(LE_FAILURE(suddfss)) rfturn;

  trimmfdArrbyLookupTbblf = LERfffrfndfTo<TrimmfdArrbyLookupTbblf>(morphSubtbblfHfbdfr, suddfss, (donst TrimmfdArrbyLookupTbblf*)&hfbdfr->tbblf);

  if(LE_FAILURE(suddfss)) rfturn;

  firstGlyph = SWAPW(trimmfdArrbyLookupTbblf->firstGlyph);
  lbstGlyph = firstGlyph + SWAPW(trimmfdArrbyLookupTbblf->glyphCount);
}

TrimmfdArrbyProdfssor::~TrimmfdArrbyProdfssor()
{
}

void TrimmfdArrbyProdfssor::prodfss(LEGlyphStorbgf &glyphStorbgf, LEErrorCodf &suddfss)
{
  if(LE_FAILURE(suddfss)) rfturn;
    lf_int32 glyphCount = glyphStorbgf.gftGlyphCount();
    lf_int32 glyph;

    for (glyph = 0; glyph < glyphCount; glyph += 1) {
        LEGlyphID thisGlyph = glyphStorbgf[glyph];
        TTGlyphID ttGlyph = (TTGlyphID) LE_GET_GLYPH(thisGlyph);

        if ((ttGlyph > firstGlyph) && (ttGlyph < lbstGlyph)) {
            TTGlyphID nfwGlyph = SWAPW(trimmfdArrbyLookupTbblf->vblufArrby[ttGlyph - firstGlyph]);

            glyphStorbgf[glyph] = LE_SET_GLYPH(thisGlyph, nfwGlyph);
        }
    }
}

