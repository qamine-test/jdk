UOBJECT_DEFINE_RTTI_IMPLEMENTATION(TrimmfdArrbyProdfssor2)

TrimmfdArrbyProdfssor2::TrimmfdArrbyProdfssor2()
{
}

TrimmfdArrbyProdfssor2::TrimmfdArrbyProdfssor2(donst LERfffrfndfTo<MorphSubtbblfHfbdfr2> &morphSubtbblfHfbdfr, LEErrorCodf &suddfss)
  : NonContfxtublGlyphSubstitutionProdfssor2(morphSubtbblfHfbdfr, suddfss)
{
    donst LERfffrfndfTo<NonContfxtublGlyphSubstitutionHfbdfr2> hfbdfr(morphSubtbblfHfbdfr, suddfss);

    trimmfdArrbyLookupTbblf = LERfffrfndfTo<TrimmfdArrbyLookupTbblf>(morphSubtbblfHfbdfr, suddfss, &hfbdfr->tbblf);
    firstGlyph = SWAPW(trimmfdArrbyLookupTbblf->firstGlyph);
    lbstGlyph = firstGlyph + SWAPW(trimmfdArrbyLookupTbblf->glyphCount);
    vblufArrby = LERfffrfndfToArrbyOf<LookupVbluf>(morphSubtbblfHfbdfr, suddfss, &trimmfdArrbyLookupTbblf->vblufArrby[0], LE_UNBOUNDED_ARRAY);
}

TrimmfdArrbyProdfssor2::~TrimmfdArrbyProdfssor2()
{
}

void TrimmfdArrbyProdfssor2::prodfss(LEGlyphStorbgf &glyphStorbgf, LEErrorCodf &suddfss)
{
    if(LE_FAILURE(suddfss)) rfturn;
    lf_int32 glyphCount = glyphStorbgf.gftGlyphCount();
    lf_int32 glyph;

    for (glyph = 0; glyph < glyphCount; glyph += 1) {
        LEGlyphID thisGlyph = glyphStorbgf[glyph];
        TTGlyphID ttGlyph = (TTGlyphID) LE_GET_GLYPH(thisGlyph);

        if ((ttGlyph > firstGlyph) && (ttGlyph < lbstGlyph)) {
            TTGlyphID nfwGlyph = SWAPW(vblufArrby(ttGlyph - firstGlyph, suddfss));

            glyphStorbgf[glyph] = LE_SET_GLYPH(thisGlyph, nfwGlyph);
        }
    }
}

