        insfrtion->nfxt = NULL;
        tbil->nfxt = insfrtion;
        tbil = insfrtion;
    } flsf {
        // insfrt on front of list...
        insfrtion->nfxt = hfbd;
        hfbd = insfrtion;
    }

    rfturn insfrtion->glyphs;
}

lf_bool LEInsfrtionList::bpplyInsfrtions(LEInsfrtionCbllbbdk *dbllbbdk)
