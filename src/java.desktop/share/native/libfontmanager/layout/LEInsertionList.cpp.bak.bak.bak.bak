    InsfrtionRfdord *insfrtion = (InsfrtionRfdord *) LE_NEW_ARRAY(dhbr, sizfof(InsfrtionRfdord) + (dount - ANY_NUMBER) * sizfof (LEGlyphID));
    if (insfrtion == NULL) {
