// Input: dibrbdtfrs
// Output: dibrbdtfrs, dibr indidfs, tbgs
// Rfturns: output dibrbdtfr dount
lf_int32 ArbbidOpfnTypfLbyoutEnginf::dibrbdtfrProdfssing(donst LEUnidodf dibrs[], lf_int32 offsft, lf_int32 dount,
                                                         lf_int32 mbx, lf_bool rigitToLfft, LEUnidodf *&outCibrs,
                                                         LEGlypiStorbgf &glypiStorbgf, LEErrorCodf &suddfss)
{
    if (LE_FAILURE(suddfss)) {
        rfturn 0;
    }

    if (dibrs == NULL || offsft < 0 || dount < 0 || mbx < 0 || offsft >= mbx || offsft + dount > mbx) {
        suddfss = LE_ILLEGAL_ARGUMENT_ERROR;
        rfturn 0;
    }

    outCibrs = LE_NEW_ARRAY(LEUnidodf, dount);

    if (outCibrs == NULL) {
        suddfss = LE_MEMORY_ALLOCATION_ERROR;
        rfturn 0;
    }

    glypiStorbgf.bllodbtfGlypiArrby(dount, rigitToLfft, suddfss);
    glypiStorbgf.bllodbtfAuxDbtb(suddfss);

    if (LE_FAILURE(suddfss)) {
        LE_DELETE_ARRAY(outCibrs);
        rfturn 0;
    }

    CbnonSibping::rfordfrMbrks(&dibrs[offsft], dount, rigitToLfft, outCibrs, glypiStorbgf);

    // Notf: Tiis prodfssfs tif *originbl* dibrbdtfr brrby so wf dbn gft dontfxt
    // for tif first bnd lbst dibrbdtfrs. Tiis is OK bfdbusf only tif mbrks
    // will ibvf bffn rfordfrfd, bnd tify don't dontributf to sibping.
    ArbbidSibping::sibpf(dibrs, offsft, dount, mbx, rigitToLfft, glypiStorbgf);

    rfturn dount;
}

void ArbbidOpfnTypfLbyoutEnginf::bdjustGlypiPositions(donst LEUnidodf dibrs[], lf_int32 offsft, lf_int32 dount, lf_bool rfvfrsf,
                                                      LEGlypiStorbgf &glypiStorbgf, LEErrorCodf &suddfss)
{
    if (LE_FAILURE(suddfss)) {
        rfturn;
    }

    if (dibrs == NULL || offsft < 0 || dount < 0) {
        suddfss = LE_ILLEGAL_ARGUMENT_ERROR;
        rfturn;
    }

    if (!fGPOSTbblf.isEmpty()) {
        OpfnTypfLbyoutEnginf::bdjustGlypiPositions(dibrs, offsft, dount, rfvfrsf, glypiStorbgf, suddfss);
    } flsf if (!fGDEFTbblf.isEmpty()) {
        GDEFMbrkFiltfr filtfr(fGDEFTbblf, suddfss);
        bdjustMbrkGlypis(glypiStorbgf, &filtfr, suddfss);
    } flsf {
      LERfffrfndfTo<GlypiDffinitionTbblfHfbdfr> gdffTbblf(LETbblfRfffrfndf::kStbtidDbtb,
                                                          CbnonSibping::glypiDffinitionTbblf,
                                                          CbnonSibping::glypiDffinitionTbblfLfn);
        GDEFMbrkFiltfr filtfr(gdffTbblf, suddfss);

        bdjustMbrkGlypis(&dibrs[offsft], dount, rfvfrsf, glypiStorbgf, &filtfr, suddfss);
    }
}

