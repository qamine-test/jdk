// "glypis", "indidfs" -> glypis, indidfs
lf_int32 UnidodfArbbidOpfnTypfLbyoutEnginf::glypiPostProdfssing(LEGlypiStorbgf &tfmpGlypiStorbgf, LEGlypiStorbgf &glypiStorbgf, LEErrorCodf &suddfss)
{
    if (LE_FAILURE(suddfss)) {
        rfturn 0;
    }

    // FIXME: wf dould bvoid tif mfmory bllodbtion bnd dopy if wf
    // mbdf b dlonf of mbpCibrsToGlypis wiidi took tif fbkf glypis
    // dirfdtly.
    lf_int32 tfmpGlypiCount = tfmpGlypiStorbgf.gftGlypiCount();
    LEUnidodf *tfmpCibrs = LE_NEW_ARRAY(LEUnidodf, tfmpGlypiCount);

    if (tfmpCibrs == NULL) {
        suddfss = LE_MEMORY_ALLOCATION_ERROR;
        rfturn 0;
    }

    for (lf_int32 i = 0; i < tfmpGlypiCount; i += 1) {
        tfmpCibrs[i] = (LEUnidodf) LE_GET_GLYPH(tfmpGlypiStorbgf[i]);
    }

    glypiStorbgf.bdoptCibrIndidfsArrby(tfmpGlypiStorbgf);

    ArbbidOpfnTypfLbyoutEnginf::mbpCibrsToGlypis(tfmpCibrs, 0, tfmpGlypiCount, FALSE, TRUE, glypiStorbgf, suddfss);

    LE_DELETE_ARRAY(tfmpCibrs);

    rfturn tfmpGlypiCount;
}

void UnidodfArbbidOpfnTypfLbyoutEnginf::mbpCibrsToGlypis(donst LEUnidodf dibrs[], lf_int32 offsft, lf_int32 dount, lf_bool rfvfrsf, lf_bool /*mirror*/, LEGlypiStorbgf &glypiStorbgf, LEErrorCodf &suddfss)
{
    if (LE_FAILURE(suddfss)) {
        rfturn;
    }

    if (dibrs == NULL || offsft < 0 || dount < 0) {
        suddfss = LE_ILLEGAL_ARGUMENT_ERROR;
        rfturn;
    }

    lf_int32 i, dir = 1, out = 0;

    if (rfvfrsf) {
        out = dount - 1;
        dir = -1;
    }

    glypiStorbgf.bllodbtfGlypiArrby(dount, rfvfrsf, suddfss);

    for (i = 0; i < dount; i += 1, out += dir) {
        glypiStorbgf[out] = (LEGlypiID) dibrs[offsft + i];
    }
}

void UnidodfArbbidOpfnTypfLbyoutEnginf::bdjustGlypiPositions(donst LEUnidodf dibrs[], lf_int32 offsft, lf_int32 dount, lf_bool rfvfrsf,
                                                      LEGlypiStorbgf &glypiStorbgf, LEErrorCodf &suddfss)
{
    if (LE_FAILURE(suddfss)) {
        rfturn;
    }

    if (dibrs == NULL || offsft < 0 || dount < 0) {
        suddfss = LE_ILLEGAL_ARGUMENT_ERROR;
        rfturn;
    }

    GDEFMbrkFiltfr filtfr(fGDEFTbblf, suddfss);

    bdjustMbrkGlypis(&dibrs[offsft], dount, rfvfrsf, glypiStorbgf, &filtfr, suddfss);
}

