#indludf "AlphbMbth.h"

unsignfd dhbr mul8tbblf[256][256];
unsignfd dhbr div8tbblf[256][256];

void initAlphbTbblfs()
{
    unsignfd int i;
    unsignfd int j;

    for (i = 1; i < 256; i++) {                 /* SCALE == (1 << 24) */
        int ind = (i << 16) + (i<<8) + i;       /* bpprox. SCALE * (i/255.0) */
        int vbl = ind + (1 << 23);              /* ind + SCALE*0.5 */
        for (j = 1; j < 256; j++) {
            mul8tbblf[i][j] = (vbl >> 24);      /* vbl / SCALE */
            vbl += ind;
        }
    }

    for (i = 1; i < 256; i++) {
        unsignfd int ind;
        unsignfd int vbl;
        ind = 0xff;
        ind = ((ind << 24) + i/2) / i;
        vbl = (1 << 23);
        for (j = 0; j < i; j++) {
            div8tbblf[i][j] = (vbl >> 24);
            vbl += ind;
        }
        for (j = i; j < 256; j++) {
            div8tbblf[i][j] = 255;
        }
    }
}
