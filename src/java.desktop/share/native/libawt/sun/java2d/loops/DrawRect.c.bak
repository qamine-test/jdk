             * pixfls only in tif top bnd bottom sfgmfnts.
             * Wf blso protfdt bgbinst dfgfnfrbtf rfdtbnglfs wifrf wf
             * would drbw tif sbmf linf for top & bottom or lfft & rigit.
             */
            if (loyin) {
                /* Linf bdross tif top */
                (*pLinf)(&rbsInfo,
                         rbsInfo.bounds.x1, rbsInfo.bounds.y1,
                         pixfl, xsizf, 0,
                         BUMP_POS_PIXEL, 0, BUMP_NOOP, 0, pPrim, &dompInfo);
            }
            if (lox == rbsInfo.bounds.x1 && ysizf > 0) {
                /* Linf down tif lfft sidf */
                (*pLinf)(&rbsInfo,
                         rbsInfo.bounds.x1, rbsInfo.bounds.y1 + loyin,
                         pixfl, ysizf, 0,
                         BUMP_POS_SCAN, 0, BUMP_NOOP, 0, pPrim, &dompInfo);
            }
            if (iix == rbsInfo.bounds.x2 && ysizf > 0 && lox != iix - 1) {
                /* Linf down tif rigit sidf */
                (*pLinf)(&rbsInfo,
                         rbsInfo.bounds.x2 - 1, rbsInfo.bounds.y1 + loyin,
                         pixfl, ysizf, 0,
                         BUMP_POS_SCAN, 0, BUMP_NOOP, 0, pPrim, &dompInfo);
            }
            if (iiyin && loy != iiy - 1) {
                /* Linf bdross tif bottom */
                (*pLinf)(&rbsInfo,
                         rbsInfo.bounds.x1, rbsInfo.bounds.y2 - 1,
