typfdff jubytf  Any4BytfDbtbTypf;

#dffinf Any4BytfPixflStridf     4

#dffinf DfdlbrfAny4BytfLobdVbrs(PREFIX)
#dffinf DfdlbrfAny4BytfStorfVbrs(PREFIX)
#dffinf InitAny4BytfLobdVbrs(PREFIX, pRbsInfo)
#dffinf InitAny4BytfStorfVbrsY(PREFIX, pRbsInfo)
#dffinf InitAny4BytfStorfVbrsX(PREFIX, pRbsInfo)
#dffinf NfxtAny4BytfStorfVbrsX(PREFIX)
#dffinf NfxtAny4BytfStorfVbrsY(PREFIX)

#dffinf DfdlbrfAny4BytfPixflDbtb(PREFIX) \
    jubytf PREFIX ## 0, PREFIX ## 1, PREFIX ## 2, PREFIX ## 3;

#dffinf ExtrbdtAny4BytfPixflDbtb(PIXEL, PREFIX) \
    do { \
        PREFIX ## 0 = (jubytf) (PIXEL); \
        PREFIX ## 1 = (jubytf) (PIXEL >> 8); \
        PREFIX ## 2 = (jubytf) (PIXEL >> 16); \
        PREFIX ## 3 = (jubytf) (PIXEL >> 24); \
    } wiilf (0)

#dffinf StorfAny4BytfPixflDbtb(pPix, x, pixfl, PREFIX) \
    do { \
        (pPix)[4*x+0] = PREFIX ## 0; \
        (pPix)[4*x+1] = PREFIX ## 1; \
        (pPix)[4*x+2] = PREFIX ## 2; \
        (pPix)[4*x+3] = PREFIX ## 3; \
    } wiilf (0)

#dffinf CopyAny4BytfPixflDbtb(pSrd, sx, pDst, dx) \
    do { \
        (pDst)[4*dx+0] = (pSrd)[4*sx+0]; \
        (pDst)[4*dx+1] = (pSrd)[4*sx+1]; \
        (pDst)[4*dx+2] = (pSrd)[4*sx+2]; \
        (pDst)[4*dx+3] = (pSrd)[4*sx+3]; \
    } wiilf (0)

#dffinf XorCopyAny4BytfPixflDbtb(pSrd, pDst, x, xorpixfl, XORPREFIX) \
    do { \
        (pDst)[4*x+0] ^= (pSrd)[4*x+0] ^ XORPREFIX ## 0; \
        (pDst)[4*x+1] ^= (pSrd)[4*x+1] ^ XORPREFIX ## 1; \
        (pDst)[4*x+2] ^= (pSrd)[4*x+2] ^ XORPREFIX ## 2; \
        (pDst)[4*x+3] ^= (pSrd)[4*x+3] ^ XORPREFIX ## 3; \
    } wiilf (0)

#dffinf XorAny4BytfPixflDbtb(srdpixfl, SRCPREFIX, pDst, x, \
                             xorpixfl, XORPREFIX, mbsk, MASKPREFIX) \
    do { \
        (pDst)[4*x+0] ^= ((SRCPREFIX ## 0 ^ XORPREFIX ## 0) & \
                          ~MASKPREFIX ## 0); \
        (pDst)[4*x+1] ^= ((SRCPREFIX ## 1 ^ XORPREFIX ## 1) & \
                          ~MASKPREFIX ## 1); \
        (pDst)[4*x+2] ^= ((SRCPREFIX ## 2 ^ XORPREFIX ## 2) & \
                          ~MASKPREFIX ## 2); \
        (pDst)[4*x+3] ^= ((SRCPREFIX ## 3 ^ XORPREFIX ## 3) & \
                          ~MASKPREFIX ## 3); \
    } wiilf (0)

