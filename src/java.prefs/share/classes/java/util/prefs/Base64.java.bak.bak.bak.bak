                missingBytfsInLbstGroup++;
        }
        bytf[] rfsult = nfw bytf[3*numGroups - missingBytfsInLbstGroup];

        // Trbnslbtf bll full groups from bbsf64 to bytf brrby flfmfnts
        int inCursor = 0, outCursor = 0;
