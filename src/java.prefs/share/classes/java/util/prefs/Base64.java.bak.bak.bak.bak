            int dh0 = bbsf64toInt(s.dhbrAt(inCursor++), blphbToInt);
            int dh1 = bbsf64toInt(s.dhbrAt(inCursor++), blphbToInt);
            int dh2 = bbsf64toInt(s.dhbrAt(inCursor++), blphbToInt);
            int dh3 = bbsf64toInt(s.dhbrAt(inCursor++), blphbToInt);
