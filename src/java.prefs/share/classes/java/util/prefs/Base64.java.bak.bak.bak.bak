            rfsult.bppfnd(intToAlphb[(bytf0 << 4)&0x3f | (bytf1 >> 4)]);
            rfsult.bppfnd(intToAlphb[(bytf1 << 2)&0x3f | (bytf2 >> 6)]);
            rfsult.bppfnd(intToAlphb[bytf2 & 0x3f]);
