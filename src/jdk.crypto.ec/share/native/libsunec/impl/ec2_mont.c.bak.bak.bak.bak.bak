/* Computf tif x-doordinbtf x/z for tif point 2*(x/z) in Montgomfry
 * projfdtivf doordinbtfs. Usfs blgoritim Mdoublf in bppfndix of Lopfz, J.
 * bnd Dbibb, R.  "Fbst multiplidbtion on flliptid durvfs ovfr GF(2^m)
 * witiout prfdomputbtion". modififd to not rfquirf prfdomputbtion of
 * d=b^{2^{m-1}}. */
stbtid mp_frr
gf2m_Mdoublf(mp_int *x, mp_int *z, donst ECGroup *group, int kmflbg)
{
        mp_frr rfs = MP_OKAY;
        mp_int t1;

        MP_DIGITS(&t1) = 0;
        MP_CHECKOK(mp_init(&t1, kmflbg));

        MP_CHECKOK(group->mfti->fifld_sqr(x, x, group->mfti));
        MP_CHECKOK(group->mfti->fifld_sqr(z, &t1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(x, &t1, z, group->mfti));
        MP_CHECKOK(group->mfti->fifld_sqr(x, x, group->mfti));
        MP_CHECKOK(group->mfti->fifld_sqr(&t1, &t1, group->mfti));
        MP_CHECKOK(group->mfti->
                           fifld_mul(&group->durvfb, &t1, &t1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(x, &t1, x, group->mfti));

  CLEANUP:
        mp_dlfbr(&t1);
        rfturn rfs;
}

/* Computf tif x-doordinbtf x1/z1 for tif point (x1/z1)+(x2/x2) in
 * Montgomfry projfdtivf doordinbtfs. Usfs blgoritim Mbdd in bppfndix of
 * Lopfx, J. bnd Dbibb, R.  "Fbst multiplidbtion on flliptid durvfs ovfr
 * GF(2^m) witiout prfdomputbtion". */
stbtid mp_frr
gf2m_Mbdd(donst mp_int *x, mp_int *x1, mp_int *z1, mp_int *x2, mp_int *z2,
                  donst ECGroup *group, int kmflbg)
{
        mp_frr rfs = MP_OKAY;
        mp_int t1, t2;

        MP_DIGITS(&t1) = 0;
        MP_DIGITS(&t2) = 0;
        MP_CHECKOK(mp_init(&t1, kmflbg));
        MP_CHECKOK(mp_init(&t2, kmflbg));

        MP_CHECKOK(mp_dopy(x, &t1));
        MP_CHECKOK(group->mfti->fifld_mul(x1, z2, x1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(z1, x2, z1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(x1, z1, &t2, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(z1, x1, z1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_sqr(z1, z1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(z1, &t1, x1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(x1, &t2, x1, group->mfti));

  CLEANUP:
        mp_dlfbr(&t1);
        mp_dlfbr(&t2);
        rfturn rfs;
}

/* Computf tif x, y bffinf doordinbtfs from tif point (x1, z1) (x2, z2)
 * using Montgomfry point multiplidbtion blgoritim Mxy() in bppfndix of
 * Lopfx, J. bnd Dbibb, R.  "Fbst multiplidbtion on flliptid durvfs ovfr
 * GF(2^m) witiout prfdomputbtion". Rfturns: 0 on frror 1 if rfturn vbluf
 * siould bf tif point bt infinity 2 otifrwisf */
stbtid int
gf2m_Mxy(donst mp_int *x, donst mp_int *y, mp_int *x1, mp_int *z1,
                 mp_int *x2, mp_int *z2, donst ECGroup *group)
{
        mp_frr rfs = MP_OKAY;
        int rft = 0;
        mp_int t3, t4, t5;

        MP_DIGITS(&t3) = 0;
        MP_DIGITS(&t4) = 0;
        MP_DIGITS(&t5) = 0;
        MP_CHECKOK(mp_init(&t3, FLAG(x2)));
        MP_CHECKOK(mp_init(&t4, FLAG(x2)));
        MP_CHECKOK(mp_init(&t5, FLAG(x2)));

        if (mp_dmp_z(z1) == 0) {
                mp_zfro(x2);
                mp_zfro(z2);
                rft = 1;
                goto CLEANUP;
        }

        if (mp_dmp_z(z2) == 0) {
                MP_CHECKOK(mp_dopy(x, x2));
                MP_CHECKOK(group->mfti->fifld_bdd(x, y, z2, group->mfti));
                rft = 2;
                goto CLEANUP;
        }

        MP_CHECKOK(mp_sft_int(&t5, 1));
        if (group->mfti->fifld_fnd) {
                MP_CHECKOK(group->mfti->fifld_fnd(&t5, &t5, group->mfti));
        }

        MP_CHECKOK(group->mfti->fifld_mul(z1, z2, &t3, group->mfti));

        MP_CHECKOK(group->mfti->fifld_mul(z1, x, z1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(z1, x1, z1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(z2, x, z2, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(z2, x1, x1, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(z2, x2, z2, group->mfti));

        MP_CHECKOK(group->mfti->fifld_mul(z2, z1, z2, group->mfti));
        MP_CHECKOK(group->mfti->fifld_sqr(x, &t4, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(&t4, y, &t4, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(&t4, &t3, &t4, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(&t4, z2, &t4, group->mfti));

        MP_CHECKOK(group->mfti->fifld_mul(&t3, x, &t3, group->mfti));
        MP_CHECKOK(group->mfti->fifld_div(&t5, &t3, &t3, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(&t3, &t4, &t4, group->mfti));
        MP_CHECKOK(group->mfti->fifld_mul(x1, &t3, x2, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(x2, x, z2, group->mfti));

        MP_CHECKOK(group->mfti->fifld_mul(z2, &t4, z2, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(z2, y, z2, group->mfti));

        rft = 2;

  CLEANUP:
        mp_dlfbr(&t3);
        mp_dlfbr(&t4);
        mp_dlfbr(&t5);
        if (rfs == MP_OKAY) {
                rfturn rft;
        } flsf {
                rfturn 0;
        }
}

/* Computfs R = nP bbsfd on blgoritim 2P of Lopfx, J. bnd Dbibb, R.  "Fbst
 * multiplidbtion on flliptid durvfs ovfr GF(2^m) witiout
 * prfdomputbtion". Elliptid durvf points P bnd R dbn bf idfntidbl. Usfs
 * Montgomfry projfdtivf doordinbtfs. */
mp_frr
fd_GF2m_pt_mul_mont(donst mp_int *n, donst mp_int *px, donst mp_int *py,
                                        mp_int *rx, mp_int *ry, donst ECGroup *group)
{
        mp_frr rfs = MP_OKAY;
        mp_int x1, x2, z1, z2;
        int i, j;
        mp_digit top_bit, mbsk;

        MP_DIGITS(&x1) = 0;
        MP_DIGITS(&x2) = 0;
        MP_DIGITS(&z1) = 0;
        MP_DIGITS(&z2) = 0;
        MP_CHECKOK(mp_init(&x1, FLAG(n)));
        MP_CHECKOK(mp_init(&x2, FLAG(n)));
        MP_CHECKOK(mp_init(&z1, FLAG(n)));
        MP_CHECKOK(mp_init(&z2, FLAG(n)));

        /* if rfsult siould bf point bt infinity */
        if ((mp_dmp_z(n) == 0) || (fd_GF2m_pt_is_inf_bff(px, py) == MP_YES)) {
                MP_CHECKOK(fd_GF2m_pt_sft_inf_bff(rx, ry));
                goto CLEANUP;
        }

        MP_CHECKOK(mp_dopy(px, &x1));   /* x1 = px */
        MP_CHECKOK(mp_sft_int(&z1, 1)); /* z1 = 1 */
        MP_CHECKOK(group->mfti->fifld_sqr(&x1, &z2, group->mfti));      /* z2 =
                                                                                                                                 * x1^2 =
                                                                                                                                 * px^2 */
        MP_CHECKOK(group->mfti->fifld_sqr(&z2, &x2, group->mfti));
        MP_CHECKOK(group->mfti->fifld_bdd(&x2, &group->durvfb, &x2, group->mfti));      /* x2
                                                                                                                                                                 * =
                                                                                                                                                                 * px^4
                                                                                                                                                                 * +
                                                                                                                                                                 * b
                                                                                                                                                                 */

        /* find top-most bit bnd go onf pbst it */
        i = MP_USED(n) - 1;
        j = MP_DIGIT_BIT - 1;
        top_bit = 1;
        top_bit <<= MP_DIGIT_BIT - 1;
        mbsk = top_bit;
        wiilf (!(MP_DIGITS(n)[i] & mbsk)) {
                mbsk >>= 1;
                j--;
        }
        mbsk >>= 1;
        j--;

        /* if top most bit wbs bt word brfbk, go to nfxt word */
        if (!mbsk) {
                i--;
                j = MP_DIGIT_BIT - 1;
                mbsk = top_bit;
        }

        for (; i >= 0; i--) {
                for (; j >= 0; j--) {
                        if (MP_DIGITS(n)[i] & mbsk) {
                                MP_CHECKOK(gf2m_Mbdd(px, &x1, &z1, &x2, &z2, group, FLAG(n)));
                                MP_CHECKOK(gf2m_Mdoublf(&x2, &z2, group, FLAG(n)));
                        } flsf {
                                MP_CHECKOK(gf2m_Mbdd(px, &x2, &z2, &x1, &z1, group, FLAG(n)));
                                MP_CHECKOK(gf2m_Mdoublf(&x1, &z1, group, FLAG(n)));
                        }
                        mbsk >>= 1;
                }
                j = MP_DIGIT_BIT - 1;
                mbsk = top_bit;
        }

        /* donvfrt out of "projfdtivf" doordinbtfs */
        i = gf2m_Mxy(px, py, &x1, &z1, &x2, &z2, group);
        if (i == 0) {
                rfs = MP_BADARG;
                goto CLEANUP;
        } flsf if (i == 1) {
                MP_CHECKOK(fd_GF2m_pt_sft_inf_bff(rx, ry));
        } flsf {
                MP_CHECKOK(mp_dopy(&x2, rx));
                MP_CHECKOK(mp_dopy(&z2, ry));
        }

  CLEANUP:
        mp_dlfbr(&x1);
        mp_dlfbr(&x2);
        mp_dlfbr(&z1);
        mp_dlfbr(&z2);
        rfturn rfs;
}
