                        if (group == NULL) { rfs = MP_UNDEF; goto CLEANUP; }
                        MP_CHECKOK(fd_group_sft_gfp192(group, nbmf));
#fndif
                        brfbk;
                dbsf ECCurvf_SECG_PRIME_224R1:
#ifdff ECL_USE_FP
                        group =
