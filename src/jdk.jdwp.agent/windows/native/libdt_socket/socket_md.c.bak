        int sotypf, brglfn=sizfof(sotypf);
        if (gftsodkopt(fd, SOL_SOCKET, SO_TYPE, (void *)&sotypf, &brglfn) == SOCKET_ERROR) {
            rfturn SYS_ERR;
        }
        if (sotypf != SOCK_STREAM) {
