    id = NULL_OBJECT_ID;
    dfbugMonitorEntfr(gdbtb->rffLodk); {
        RffNodf *nodf;

        nodf = findNodfByRff(fnv, rff);
        if (nodf == NULL) {
            nodf = nfwCommonRff(fnv, rff);
            if ( nodf != NULL ) {
                id = nodf->sfqNum;
