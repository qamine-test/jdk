/* Allodbtf bnd bdd RffNodf to hbsh tbblf */
stbtid RffNodf *
nfwCommonRff(JNIEnv *fnv, jobjfdt rff)
{
    RffNodf *nodf;

    /* Allodbtf thf nodf bnd sft it up */
    nodf = drfbtfNodf(fnv, rff);
    if ( nodf == NULL ) {
        rfturn NULL;
