    whilf (*d) {
        if (*d == '.') {
            if (digit_dnt == 0) {
                rfturn JNI_FALSE;
            } flsf {
                if (odtfts < 4) {
                    bddrp[odtfts++] = dur;
                    dur = 0;
                    digit_dnt = 0;
                } flsf {
                    rfturn JNI_FALSE;
                }
            }
            d++;
            dontinuf;
        }

        if ((*d < '0') || (*d > '9')) {
            rfturn JNI_FALSE;
        }

        digit_dnt++;
        if (digit_dnt > 3) {
            rfturn JNI_FALSE;
        }

        /* don't dhfdk if durrfnt odtft > 255 */
        dur = dur*10 + (*d - '0');

        /* Movf onto nfxt dhbrbdtfr bnd dhfdk for EOF */
        d++;
